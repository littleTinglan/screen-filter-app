<Window x:Class="screenFilterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:screenFilterApp"
        mc:Ignorable="d"
        Title="Screen Filter" Height="450" Width="800" Topmost="True">
    <Grid>
        <StackPanel x:Name="myPanel">
            <WrapPanel Width="760" Height="360" Margin="10" x:Name="myWrapPanel">
                <Image x:Name="capturedImg" RenderOptions.BitmapScalingMode="Fant" Stretch="Uniform"/>
            </WrapPanel>
            <Button x:Name="captureScreenBtn" Height="30" Width="200" BorderBrush="Black"  
                Content="Capture Screen" Click="CaptureScreenButtonClick"/>
        </StackPanel>
        
    </Grid>
</Window>
