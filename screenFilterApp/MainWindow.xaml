<src:PerMonitorDPIWindow x:Class="screenFilterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:src="clr-namespace:NativeHelpers;assembly=NativeHelpers"
        mc:Ignorable="d"
        Title="Screen Filter" Height="450" Width="800" Topmost="True" Style="{StaticResource WindowBorder}">

    <Grid MouseLeftButtonDown="DragWindow">
        <StackPanel>
            <Grid x:Name="myTitle" Background="WhiteSmoke">
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" FontSize="7" 
                  Width="15" Height="15" Padding="0" Click="CloseClicked"/>
            </Grid>
            <StackPanel x:Name="myImgPanel">
                <WrapPanel Width="760" Height="360" Margin="10" x:Name="myWrapPanel">
                </WrapPanel>
                <Button x:Name="captureScreenBtn" Height="30" Width="200" BorderBrush="Black"  
                    Content="Capture Screen" Click="CaptureScreenButtonClick"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</src:PerMonitorDPIWindow>
